@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/gridformatTargets.cmake")
check_required_components(gridformat)

set(gridformat_LIBRARY GridFormat::gridformat)
set_and_check(gridformat_INCLUDE_DIRS "@PACKAGE_CMAKE_INSTALL_INCLUDEDIR@")
set_and_check(gridformat_MODULE_DIR "@PACKAGE_CMAKE_INSTALL_LIBDIR@/cmake/gridformat/modules")
list(APPEND CMAKE_MODULE_PATH gridformat_MODULE_DIR)

include(CMakeFindDependencyMacro)
if (@ZLIB_FOUND@)
    find_dependency(ZLIB)
endif ()
if (@LZ4_FOUND@)
    find_dependency(LZ4)
endif ()
if (@LZMA_FOUND@)
    find_dependency(LZMA)
endif()
if (@MPI_FOUND@)
    find_dependency(MPI)
endif ()
